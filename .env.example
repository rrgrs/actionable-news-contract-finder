# Service Configuration
# Comma-separated list of services to load
# Service names are matched against available plugin names
# The system will automatically find the correct plugin based on the name
# 
# Available services (as of initial setup):
# - News: mock-news (MockNewsServicePlugin)
# - Betting: mock-betting (MockBettingPlatformPlugin)  
# - LLM: mock-llm (MockLLMProviderPlugin)
#
# You can add more services by creating plugin files in:
# - src/services/news/plugins/ for news services
# - src/services/betting/plugins/ for betting platforms
# - src/services/llm/plugins/ for LLM providers
#
NEWS_SERVICES=mock-news
BETTING_PLATFORMS=mock-betting
LLM_PROVIDERS=mock-llm

# News Service Configurations
# Format: NEWS_<SERVICE_NAME>_<CONFIG_KEY>=value
# Example for a real news API:
# NEWS_NEWSAPI_APIKEY=your_newsapi_key_here
# NEWS_NEWSAPI_BASEURL=https://newsapi.org/v2
# NEWS_ALPHAVANTAGE_APIKEY=your_alphavantage_key_here

# Mock News Service (no configuration needed)
NEWS_MOCK_NEWS_ENABLED=true

# Betting Platform Configurations  
# Format: BETTING_<PLATFORM_NAME>_<CONFIG_KEY>=value
# Example for real platforms:
# BETTING_KALSHI_APIKEY=your_kalshi_key_here
# BETTING_KALSHI_APISECRET=your_kalshi_secret_here
# BETTING_POLYMARKET_APIKEY=your_polymarket_key_here

# Mock Betting Platform
BETTING_MOCK_BETTING_TESTMODE=true

# LLM Provider Configurations
# Format: LLM_<PROVIDER_NAME>_<CONFIG_KEY>=value
# Example for real providers:
# LLM_OPENAI_APIKEY=your_openai_key_here
# LLM_OPENAI_MODEL=gpt-4
# LLM_OPENAI_TEMPERATURE=0.7
# LLM_ANTHROPIC_APIKEY=your_anthropic_key_here
# LLM_ANTHROPIC_MODEL=claude-3-opus-20240229

# Mock LLM Provider
LLM_MOCK_LLM_TEMPERATURE=0.7
LLM_MOCK_LLM_MAXTOKENS=2000

# Orchestrator Configuration
POLL_INTERVAL_MS=60000
MIN_RELEVANCE_SCORE=0.5
MIN_CONFIDENCE_SCORE=0.6
MAX_POSITIONS_PER_CONTRACT=3

# Bet Placement Configuration
# Set to true to actually place bets (requires DRY_RUN=false)
# Set to false to only find and alert on opportunities without betting
PLACE_BETS=false

# Dry Run Mode - simulates bet placement without real orders
# Only applies when PLACE_BETS=true
DRY_RUN=true

# Alert Configuration
# Alert types: none, email, system, both
ALERT_TYPE=system

# Minimum confidence threshold for alerts (0.0 to 1.0)
ALERT_MIN_CONFIDENCE=0.7

# Cooldown period in minutes to avoid alerting too frequently for the same market
ALERT_COOLDOWN_MINUTES=30

# Email Alert Configuration (required if ALERT_TYPE is 'email' or 'both')
# Comma-separated list of email recipients
ALERT_EMAIL_TO=user@example.com,trader@example.com
ALERT_EMAIL_FROM=alerts@actionable-news.com

# SMTP Configuration for email alerts
# For Gmail: smtp.gmail.com, port 587, use app password
# For SendGrid: smtp.sendgrid.net, port 587
# For AWS SES: email-smtp.us-east-1.amazonaws.com, port 587
ALERT_SMTP_HOST=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USER=your-email@gmail.com
ALERT_SMTP_PASS=your-app-password

# Application Configuration
LOG_LEVEL=info